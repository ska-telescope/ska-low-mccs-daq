{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 17
    },
    "configurePresets": [
        {
            "name": "daq-release",
            "displayName": "AAVS DAQ (Release, with correlator)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "/opt/aavs",
                "CMAKE_INSTALL_LIBDIR": "lib",
                "CMAKE_PREFIX_PATH": "/opt/aavs",
                "WITH_CORRELATOR": "ON",
                "WITH_SMALL_STATION": "OFF"
            },
            "inherits": [
                "default"
            ],
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "daq-install",
            "configurePreset": "daq-release",
            "targets": [
                "install"
            ],
            "jobs": 4
        }
    ]
}