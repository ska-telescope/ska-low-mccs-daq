# Observation-related configuration, specifying the channel region
# for the station beamformer
observation:
    start_frequency_channel: 156.25e6
    bandwidth: 6.25e6

# Station configuration parameters
station:
    id: 0
    channel_truncation: 5
    beam_integration_time: 1
    channel_integration_time: 1
    beamformer_scaling: 4
    bitfile: "/opt/aavs-ci-runner/bitfiles/itpm_v1_5_tpm_test_wrap_sbf{{firmware_version}}.bit"
    equalize_preadu: No
    pps_delays: [0, 0]

# Network configuration parameters
network:
    tile_40g_subnet: "10.130.0.51/25"  # First Tile 40G IP / Subnet
    active_40g_qsfp: "port1-only"  #"port1-only", "port2-only", "both-ports"
    lmc:
        lmc_mac: None
        lmc_ip:  "10.132.61.2"
        lmc_port: 6660
        tpm_cpld_port: 10000
        use_teng: True

        integrated_data_ip: "10.132.61.2"
        integrated_data_port: 6660
        use_teng_integrated: True

    csp_ingest:
        dst_mac: None
        dst_ip: "10.132.61.2"
        dst_port: 6660
        src_mac: Null
        src_ip: Null
        src_port: Null

