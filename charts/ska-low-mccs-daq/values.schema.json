{
  "$schema": "http://json-schema.org/schema#",
  "$comment": "schema for ska-low-mccs-daq chart values file",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "$comment": "registry is a URI, but could be scheme-less",
          "type": "string",
          "pattern": "^(https?://)?[a-z0-9-.]+(/[a-z0-9-_/.]+)?$"
        },
        "tag": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)((-dev\\.c[0-9a-f]{8})|(-dirty))?$"
            }
          ],
          "type": [
            "string",
            "null"
          ]
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        }
      }
    },
    "receivers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "grpc_port": {
            "type": "integer",
            "minimum": 1
          },
          "receiver_nad": {
            "type": "string"
          },
          "receiver_interface": {
            "type": "string"
          },
          "receiver_ip": {
            "type": "string",
            "format": "ipv4"
          },
          "receiver_port": {
            "type": "integer",
            "minimum": 1
          },
          "expose_data_service": {
            "type": "boolean",
            "default": false
          },
          "nvidia_gpu": {
            "type": "boolean"
          },
          "storage": {
            "type": "string"
          },
          "resources": {
            "type": "object",
            "properties": {
              "limits": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "requests": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          },
          "node_selector": {
            "type": [
              "object",
              "null"
            ]
          },
          "affinity": {
            "type": [
              "object",
              "null"
            ]
          },
          "tolerations": {
            "type": [
              "object",
              "null"
            ]
          }
        },
        "required": [
          "grpc_port",
          "receiver_interface",
          "receiver_port"
        ],
        "additionalProperties": false
      }
    },
    "receiver_egresses": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "ip": {
            "type": "string",
            "format": "ipv4"
          },
          "port": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": [
          "ip"
        ],
        "additionalProperties": false
      }
    },
    "storage": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "storage_class": {
            "type": "string"
          },
          "size": {
            "type": "string"
          },
          "labels": {
            "type": "object"
          },
          "annotations": {
            "type": "object"
          }
        },
        "required": [
          "size"
        ],
        "additionalProperties": false
      }
    }
  }
}